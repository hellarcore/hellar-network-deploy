#!/usr/bin/env bash

set -ea

. ./lib/cli/utils.sh

ansible_playbook="reindex.yml"

CMD_USAGE="Reindex core nodes on Hellar Network

Usage: reindex [options] <network_name> <group_name>

Options:
  -f        --filter=<hostname>           - Filter by host name
  -h        --help                        - Show help"

for i in "$@"
do
case ${i} in
    -f*|--filter=*)
      FILTER="${i#*=}"
    ;;
    -h|--help)
      echo "$CMD_USAGE"
      exit 0
    ;;
    *)
      if [ -z ${NETWORK_NAME} ]; then
        NETWORK_NAME="${i#*=}"
        continue
      fi

      if [ -z ${GROUP_NAME} ]; then
        GROUP_NAME="${i#*=}"
        continue
      fi
    ;;
esac
done

if [ -z ${GROUP_NAME} ]; then
    echo "Ansible group name not defined"
    exit 1
fi

. ./lib/cli/init.sh
. ./lib/cli/ansible.sh

echo "Reindexing group $GROUP_NAME of $NETWORK_NAME network...";

# Install software and configure hellar network using Ansible

ansible_run_playbook "reindex.yml" --extra-vars "target_group=$GROUP_NAME" --extra-vars "filter_hostname=$FILTER"


